{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": [
    "airbnb-base"
  ],
  "plugins": [
    "jest"
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "func-names": "off",
    "max-classes-per-file": "off",
    "no-empty": ["error", {
      "allowEmptyCatch": true
    }],
    "no-param-reassign": ["error", {
      "props": false
    }],
    "no-plusplus": ["error", {
      "allowForLoopAfterthoughts": true
    }],
    "no-restricted-syntax": "off",
    "no-underscore-dangle": "off"
  }
}
